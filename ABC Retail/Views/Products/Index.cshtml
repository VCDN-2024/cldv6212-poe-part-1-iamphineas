@model IEnumerable<ABC_Retail.Models.Product>

<h1>Products</h1>
<a href="@Url.Action("AddProduct", "Products")" class="btn btn-primary mb-4">Add New Product</a>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h5 class="card-title">@product.Product_Name</h5>
                </div>
                <div class="card-img-container">
                    <img src="@product.ImageUrl" alt="@product.Product_Name" class="card-img-top" />
                </div>
                <div class="card-body">
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><small class="text-muted">Location: @product.Location</small></p>
                    <a href="@Url.Action("EditProduct", "Products", new { partitionKey = product.PartitionKey, rowKey = product.RowKey })" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@product.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@product.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>




