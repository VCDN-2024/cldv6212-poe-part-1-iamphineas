@model ABC_Retail.Models.Product

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />

    <div>
        <label asp-for="Product_Name">Name</label>
        <input type="text" asp-for="Product_Name" required />
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="Location">Location</label>
        <input type="text" asp-for="Location" required />
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="file" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Product_Name" style="width:100px;height:auto;" />
        }
    </div>
    <button type="submit">Save Changes</button>
</form>
