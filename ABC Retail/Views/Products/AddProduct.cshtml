@model ABC_Retail.Models.Product

<h2>Add New Product</h2>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Product_Id">Product ID</label>
        <input type="text" asp-for="Product_Id" required />
    </div>
    <div>
        <label asp-for="Product_Name">Name</label>
        <input type="text" asp-for="Product_Name" required />
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="Location">Location</label>
        <input type="text" asp-for="Location" required />
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="file" required />
    </div>
    <button type="submit">Add Product</button>
</form>
