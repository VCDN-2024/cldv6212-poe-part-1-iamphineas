@model IEnumerable<ABC_Retail.Models.Customer>

<h1>Customers</h1>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Customer_Id</td>
                <td>@customer.Customer_Name</td>
                <td>@customer.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new { partitionKey = customer.PartitionKey, rowKey = customer.RowKey })" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@customer.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



