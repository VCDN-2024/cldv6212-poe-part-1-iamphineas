<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC_Retail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ABC_Retail.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" /> <!-- Custom styles -->
    <style>
        /* Navbar styles */
        .navbar {
            background-color: #ffffff; /* Keep the navbar background white */
            border-bottom: 2px solid #e0e0e0; /* Slightly thicker border for a more defined separation */
        }

        .navbar-brand {
            font-weight: bold;
            color: #333; /* Darker color for contrast */
        }

        .navbar-nav .nav-link {
            color: #555; /* Slightly muted color for nav links */
        }

            .navbar-nav .nav-link:hover {
                color: #007bff; /* Standard blue for hover effect */
            }

        /* Footer styles */
        .footer {
            background-color: #f8f9fa; /* Light gray background for subtle contrast */
            color: #6c757d; /* Muted text color */
            padding: 10px 0; /* Padding for better spacing */
            text-align: center; /* Center the content */
            font-size: 0.9rem; /* Slightly smaller text size */
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

        /* Main content padding */
        .container {
            padding-top: 20px; /* Add top padding for better spacing */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ABC_Retail</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OrderPs" asp-action="Index">Order Processes</a>
                        </li>
                        <!-- New Files Tab -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Files" asp-action="Index">Files</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ABC_Retail - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
